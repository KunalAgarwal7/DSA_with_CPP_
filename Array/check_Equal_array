#include <iostream>
#include <algorithm>
using namespace std;
int main()
{
    int s1;
    int s2;

    cout << "Enter 1st array size:";
    cin >> s1;

    cout << "Enter 2nd array size:";
    cin >> s2;

    int arr1[s1];
    int arr2[s2];

    if (s1 != s2)
    {
        cout << "Arrays are not equal";
    }
    else
    {
        for (int i = 1; i <= s1; ++i)
        {
            cout << "Enter 1st array " << i << " element:";
            cin >> arr1[i - 1];
        }
        cout << endl;
        for (int i = 1; i <= s1; ++i)
        {
            cout << "Enter 2nd array " << i << "element:";
            cin >> arr2[i - 1];
        }
        sort(arr1, arr1 + s1);
        sort(arr2, arr2 + s1);

        bool ans = false;
        for (int i = 1; i <= s1; ++i)
        {
            if (arr1[i - 1] == arr2[i - 1])
            {
                ans = true;
            }
            else
            {
                ans = false;
                break;
            }
        }

        if (ans == true)
        {
            cout << "yes";
        }
        else
        {
            cout << "no";
        }
    }
}
